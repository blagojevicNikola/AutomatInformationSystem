<Window x:Class="AutomatInformationSystem.Views.FillAutomatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomatInformationSystem.Views"
        mc:Ignorable="d"
        Title="FillAutomatWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Label Content="{Binding Sifra}"
               FontSize="32"
               FontWeight="Bold"
               Padding="0"
               Margin="5"
               Grid.Row="0"/>

        <Grid Margin="5" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0"
                      Width="200"
                      Height="240"
                      SelectedItem="{Binding ToBeAdded}"
                      ItemsSource="{Binding DostupniProizvodi}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Naziv}"
                               FontSize="15"
                               FontWeight="SemiBold"
                               FontStyle="Italic"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center"
                            Margin="10">
                    <Button Content="Add"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Command="{Binding AddCommand}"/>
                    <Button Content="Remove"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Grid.Row="1"
                        Command="{Binding RemoveCommand}"/>
                </StackPanel>
                
                
            </Grid>

            <ListView Grid.Column="2"
                      Width="200"
                      Height="240"
                      SelectedItem="{Binding ToBeRemoved}"
                      ItemsSource="{Binding IzabraniProizvodi}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5"
                                    Orientation="Horizontal">
                            <Label Content="{Binding Naziv}"
                                   Margin="0,0,5,0"
                                   FontSize="15"
                                   FontWeight="SemiBold"/>
                            <Label Content="{Binding Kolicina}"
                                   FontSize="15"
                                   FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center"
                            Margin="10">
                    <Button Content="Confirm"
                        FontSize="14"
                        Width="70"
                        FontWeight="SemiBold"
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Command="{Binding ConfirmCommand}"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Prihod"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,5,0"/>
                        <TextBox FontSize="14"
                                 Width="70"
                                 Text="{Binding Prihod, Mode=OneWayToSource}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <ListView Grid.Column="4" ItemsSource="{Binding PrihodiAutomata}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    Margin="5">
                            <TextBlock Text="{Binding DatumPunjenja}"
                                       FontSize="15"
                                       FontStyle="Italic" 
                                       FontWeight="Medium"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Prihod}"
                                       FontSize="15"
                                       FontStyle="Italic" 
                                       FontWeight="Medium"
                                       Margin="0,0,15,0"/>
                            <Button Height="20"
                                    Width="20"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <Grid Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        Margin="10"
                        Grid.Row="0">
                <Label Content="Kolicina"
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,5,0"
                       Padding="0"/>
                <TextBox FontSize="14"
                         Width="60"
                         Text="{Binding Kolicina}"/>
            </StackPanel>
            <Button Content="Close"
                    FontWeight="Bold"
                    FontSize="22"
                    Width="100"
                    Padding="0"
                    Margin="10,10,10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Command="{Binding CloseCommand}"/>
        </Grid>
        
    </Grid>
</Window>
