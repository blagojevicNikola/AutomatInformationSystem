<UserControl x:Class="AutomatInformationSystem.Views.EmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomatInformationSystem.Views"
             xmlns:control = "clr-namespace:AutomatInformationSystem.Controls" 
             xmlns:gl ="clr-namespace:AutomatInformationSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">
    <Grid d:DataContext="{x:Static gl:ZaposleniListDesignView.Instance}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Zaposleni"
               FontFamily="Raleway"
               FontWeight="Bold"
               FontSize="30"
               Margin="20,10,0,10"
               VerticalAlignment="Center"
               Grid.Column="0"/>

                <Button Content="Add"
                    Padding="5,0,5,0"
                    FontFamily="Ubuntu"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Margin="0,0,20,0"
                    Width="100"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="1"
                    Background="#53ad4b"
                    Foreground="white"
                    BorderThickness="0"
                    BorderBrush="Transparent"
                    Command="{Binding Path=AddZaposleniCommand}">

                </Button>
            </Grid>

            <Separator Grid.Row="1"
                   Margin="10">
            </Separator>

            <Border Grid.Row="2"
                HorizontalAlignment="Stretch"
                Background="#ebebeb"
                Margin="10,0,10,10"
                CornerRadius="17">
                <ScrollViewer Grid.Row="2">
                    <ItemsControl 
                      ItemsSource="{Binding Items}"
                      Background="Transparent"
                      Margin="7">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <control:ZaposleniItemCard></control:ZaposleniItemCard>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
            </Border>

        </Grid>
    </Grid>
</UserControl>
